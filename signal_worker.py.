import os
import time
import requests
import pandas as pd
import numpy as np
from telegram import Bot
from dotenv import load_dotenv

# Ð—Ð°Ð³Ñ€ÑƒÐ¶Ð°ÐµÐ¼ Ð¿ÐµÑ€ÐµÐ¼ÐµÐ½Ð½Ñ‹Ðµ Ð¾ÐºÑ€ÑƒÐ¶ÐµÐ½Ð¸Ñ
load_dotenv()

BOT_TOKEN = os.getenv("BOT_TOKEN")
CHAT_ID = os.getenv("CHAT_ID")
bot = Bot(token=BOT_TOKEN)

# Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²ÐºÐ¸ Ð´Ð»Ñ Ð¾Ð±Ñ…Ð¾Ð´Ð° 451 Ð¾ÑˆÐ¸Ð±ÐºÐ¸ Binance
HEADERS = {
    "User-Agent": "Mozilla/5.0"
}

# ÐœÐ¾Ð½ÐµÑ‚Ñ‹ Ð¸ ÑƒÑ€Ð¾Ð²Ð½Ð¸
MONITOR = {
    "PEPEUSDT": {"buy_below": 0.00001060, "sell_above": 0.00001090},
    "TRXUSDT": {"buy_below": 0.1180, "sell_above": 0.1220},
    "ENAUSDT": {"buy_below": 0.525, "sell_above": 0.540},
    "MEMEUSDT": {"buy_below": 0.0175, "sell_above": 0.0192},
    "SUIUSDT": {"buy_below": 0.595, "sell_above": 0.615}
}

# ÐŸÐ¾Ð»ÑƒÑ‡ÐµÐ½Ð¸Ðµ Ñ†ÐµÐ½Ñ‹
def fetch_price(symbol: str) -> float:
    try:
        url = f"https://api.binance.com/api/v3/ticker/price?symbol={symbol}"
        response = requests.get(url, headers=HEADERS, timeout=10)
        response.raise_for_status()
        return float(response.json()["price"])
    except Exception as e:
        print(f"[ERROR] Fetch price {symbol}: {e}")
        return None

# ÐŸÐ¾Ð»ÑƒÑ‡ÐµÐ½Ð¸Ðµ ÑÐ²ÐµÑ‡ÐµÐ¹
def fetch_klines(symbol, interval="15m", limit=100):
    try:
        url = f"https://api.binance.com/api/v3/klines?symbol={symbol}&interval={interval}&limit={limit}"
        response = requests.get(url, headers=HEADERS, timeout=10)
        response.raise_for_status()
        data = response.json()
        df = pd.DataFrame(data, columns=[
            "timestamp", "open", "high", "low", "close", "volume",
            "close_time", "quote_asset_volume", "num_trades",
            "taker_buy_base", "taker_buy_quote", "ignore"
        ])
        df["close"] = df["close"].astype(float)
        return df
    except Exception as e:
        print(f"[!] ÐžÑˆÐ¸Ð±ÐºÐ° Ð¿Ñ€Ð¸ Ð¿Ð¾Ð»ÑƒÑ‡ÐµÐ½Ð¸Ð¸ ÑÐ²ÐµÑ‡ÐµÐ¹ {symbol}: {e}")
        return None

# RSI
def calculate_rsi(series, period=14):
    delta = series.diff()
    gain = np.where(delta > 0, delta, 0)
    loss = np.where(delta < 0, -delta, 0)
    avg_gain = pd.Series(gain).rolling(window=period).mean()
    avg_loss = pd.Series(loss).rolling(window=period).mean()
    rs = avg_gain / avg_loss
    return 100 - (100 / (1 + rs))

# EMA
def calculate_ema(series, period=21):
    return series.ewm(span=period, adjust=False).mean()

# Ð›Ð¾Ð³Ð¸ÐºÐ° ÑÐ¸Ð³Ð½Ð°Ð»Ð¾Ð²
def get_signal(symbol, price, rsi, ema, levels, last_signal):
    message = None
    if price <= levels["buy_below"] and rsi < 30 and price > ema and last_signal.get(symbol) != "buy":
        message = f"ðŸŸ¢ BUY {symbol}\nÐ¦ÐµÐ½Ð°: {price:.8f}\nRSI: {rsi:.2f}\nEMA: {ema:.8f}"
        last_signal[symbol] = "buy"
    elif price >= levels["sell_above"] and rsi > 70 and price < ema and last_signal.get(symbol) != "sell":
        message = f"ðŸ”´ SELL {symbol}\nÐ¦ÐµÐ½Ð°: {price:.8f}\nRSI: {rsi:.2f}\nEMA: {ema:.8f}"
        last_signal[symbol] = "sell"
    elif levels["buy_below"] < price < levels["sell_above"] and last_signal.get(symbol) != "neutral":
        message = f"âšª NEUTRAL {symbol}\nÐ¦ÐµÐ½Ð°: {price:.8f}\nRSI: {rsi:.2f}\nEMA: {ema:.8f}"
        last_signal[symbol] = "neutral"
    return message

# ÐœÐ¾Ð½Ð¸Ñ‚Ð¾Ñ€Ð¸Ð½Ð³
def monitor():
    last_signal = {}
    bot.send_message(chat_id=CHAT_ID, text="âœ… Signal Worker Ð·Ð°Ð¿ÑƒÑ‰ÐµÐ½ Ð¸ Ñ€Ð°Ð±Ð¾Ñ‚Ð°ÐµÑ‚!")
    while True:
        for symbol, levels in MONITOR.items():
            df = fetch_klines(symbol)
            if df is None or df.empty:
                continue

            close_prices = df["close"]
            rsi_series = calculate_rsi(close_prices)
            ema_series = calculate_ema(close_prices)
            current_rsi = rsi_series.iloc[-1]
            current_ema = ema_series.iloc[-1]
            current_price = close_prices.iloc[-1]

            message = get_signal(symbol, current_price, current_rsi, current_ema, levels, last_signal)
            if message:
                try:
                    bot.send_message(chat_id=CHAT_ID, text=message)
                    print(f"[âœ”] {symbol} â†’ {message.replace(chr(10), ' | ')}")
                except Exception as e:
                    print(f"[!] ÐžÑˆÐ¸Ð±ÐºÐ° Ð¾Ñ‚Ð¿Ñ€Ð°Ð²ÐºÐ¸: {e}")

        time.sleep(60)

if __name__ == "__main__":
    print("[START] signal_worker Ð·Ð°Ð¿ÑƒÑ‰ÐµÐ½")
    monitor()
